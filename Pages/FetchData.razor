@page "/fetchdata"
@using Dtos
@inject HttpClient Http

<h1>SpaceX Launches</h1>

<p>This is launch data pulled back via REST API.</p>

@if (launches == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Istentative (y/n)</th>
                <th>Launch Date</th>
                <th>Mission name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var launch in launches)
            {
                <tr>
                    <td>@launch.Id</td>
                    <td>@launch.IsTentative</td>
                    <td>@launch.LaunchDateLocal</td>
                    <td>@launch.MissionName</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private LaunchDto[] launches;

    protected override async Task OnInitializedAsync()
    {
        launches = await Http.GetFromJsonAsync<LaunchDto[]>("https://api.spacex.land/rest/launches");
    }

}
